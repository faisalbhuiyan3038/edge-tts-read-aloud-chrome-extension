{
  "manifest_version": 2,
  "name": "Edge TTS Reader",
  "version": "1.0",
  "description": "Text-to-speech using Edge TTS API with reader mode",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "https://speech.platform.bing.com/*",
    "wss://speech.platform.bing.com/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.js",
        "content/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "reader/reader.html",
    "reader/reader.js",
    "reader/reader.css",
    "browser-polyfill.js"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "edge-tts-reader@example.com",
      "strict_min_version": "57.0"
    }
  }
}
