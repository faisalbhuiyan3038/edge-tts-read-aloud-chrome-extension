{
  "manifest_version": 3,
  "name": "Edge TTS Reader",
  "version": "1.0",
  "description": "Text-to-speech using Edge TTS API",
  "host_permissions": [
    "https://speech.platform.bing.com/*",
    "wss://speech.platform.bing.com/*"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ]
}
