{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["chrome", "@types/chrome"],
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
